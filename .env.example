# Google OAuth (see docs/google.md)
# Create at: https://console.cloud.google.com/apis/credentials
export GOOGLE_CLIENT_ID=
export GOOGLE_CLIENT_SECRET=
export GOOGLE_REDIRECT_URI=http://localhost:4000/auth/google/callback

# Gemini API (for AI content generation)
# Get at: https://aistudio.google.com/app/apikey
export GEMINI_API_KEY=

# Recall.ai (meeting bot)
# IMPORTANT: Region must match your account - check dashboard
# Get at: https://www.recall.ai/
export RECALL_API_KEY=
export RECALL_REGION=us-west-2

# HubSpot - USES LEGACY APPS (see docs/hubspot.md)
# Create at: https://app.hubspot.com/developer
export HUBSPOT_CLIENT_ID=
export HUBSPOT_CLIENT_SECRET=

# Salesforce (see docs/salesforce.md)
# Create Connected App in Setup > App Manager
export SALESFORCE_CLIENT_ID=
export SALESFORCE_CLIENT_SECRET=

# LinkedIn
export LINKEDIN_CLIENT_ID=
export LINKEDIN_CLIENT_SECRET=
export LINKEDIN_REDIRECT_URI=http://localhost:4000/auth/linkedin/callback

# Facebook
export FACEBOOK_CLIENT_ID=
export FACEBOOK_CLIENT_SECRET=
export FACEBOOK_REDIRECT_URI=http://localhost:4000/auth/facebook/callback

# PRODUCTION ONLY
# DATABASE_URL=ecto://USER:PASS@HOST/DATABASE
# SECRET_KEY_BASE=  # generate with: mix phx.gen.secret
# PHX_HOST=your-domain.com
